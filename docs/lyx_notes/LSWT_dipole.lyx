\begin_inset Formula 
\begin{eqnarray}
A_{11} & = & -R_{33}^{r}S_{2}\nonumber \\
A_{22} & = & -R_{33}^{r}S_{1}\nonumber \\
A_{21} & = & \frac{\sqrt{S_{1}S_{2}}}{2}(R_{11}^{r}-iR_{12}^{r}-iR_{21}^{r}+R_{22}^{r})\nonumber \\
