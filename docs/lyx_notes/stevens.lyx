\begin_layout Plain Layout
\begin_inset Formula $k=0$
\end_inset

,
\begin_inset Formula 
\begin{align*}
\mathcal{O}_{00} & =1
\end{align*}

\end_inset


\begin_inset Formula $k=1$
\end_inset

,
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
\mathcal{O}_{1,-1} & =-\frac{i}{4}[J_{+}-J_{-}]+\hc=J_{y}\\
\mathcal{O}_{1,0} & =J_{z}\\
\mathcal{O}_{1,1} & =\frac{i}{4}[J_{+}+J_{-}]+\hc=J_{x}
\end{align*}

\end_inset


\end_layout

\end_inset


\begin_inset Formula $k=2$
\end_inset

:
\begin_inset Formula 
\begin{align*}
\mathcal{O}_{2,-2} & =\frac{1}{4i}(J_{+}^{2}-J_{-}^{2})+\hc\\
\mathcal{O}_{2,-1} & =\frac{1}{4i}(J_{+}-J_{-})J_{z}+\hc\\
\mathcal{O}_{2,0} & =3J_{z}^{2}-X\\
\mathcal{O}_{2,1} & =\frac{1}{4}(J_{+}+J_{-})J_{z}+\hc\\
\mathcal{O}_{2,2} & =\frac{1}{4}(J_{+}^{2}+J_{-}^{2})+\hc
\end{align*}

\end_inset


\begin_inset Formula $k=4$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\mathcal{O}_{4,-4} & =\frac{1}{4i}(J_{+}^{4}-J_{-}^{4})+\hc\\
\mathcal{O}_{4,-3} & =\frac{1}{4i}(J_{+}^{3}-J_{-}^{3})J_{z}+\hc\\
\mathcal{O}_{4,-2} & =\frac{1}{4i}(J_{+}^{2}-J_{-}^{2})(7J_{z}^{2}-(X+5))+\hc\\
\mathcal{O}_{4,-1} & =\frac{1}{4i}(J_{+}-J_{-})(7J_{z}^{3}-(3X+1)J_{z})+\hc\\
\mathcal{O}_{4,0} & =35J_{z}^{4}-(30X-25)J_{z}^{2}+(3X^{2}-6X)\\
\mathcal{O}_{4,1} & =\frac{1}{4}(J_{+}+J_{-})(7J_{z}^{3}-(3X+1)J_{z})+\hc\\
\mathcal{O}_{4,2} & =\frac{1}{4}(J_{+}^{2}+J_{-}^{2})(7J_{z}^{2}-(X+5))+\hc\\
\mathcal{O}_{4,3} & =\frac{1}{4}(J_{+}^{3}+J_{-}^{3})J_{z}+\hc\\
\mathcal{O}_{4,4} & =\frac{1}{4}(J_{+}^{4}+J_{-}^{4})+\hc
\end{align*}

\end_inset


\begin_inset Formula $k=6$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\mathcal{O}_{6,-6} & =\frac{1}{4i}(J_{+}^{6}-J_{-}^{6})+\hc\\
\mathcal{O}_{6,-5} & =\frac{1}{4i}(J_{+}^{5}-J_{-}^{5})J_{z}+\hc\\
\mathcal{O}_{6,-4} & =\frac{1}{4i}(J_{+}^{4}-J_{-}^{4})(11J_{z}^{2}-X-38)+\hc\\
\mathcal{O}_{6,-3} & =\frac{1}{4i}(J_{+}^{3}-J_{-}^{3})(11J_{z}^{3}-(3X+59)J_{z})+\hc\\
\mathcal{O}_{6,-2} & =\frac{1}{4i}(J_{+}^{2}-J_{-}^{2})(33J_{z}^{4}-(18X+123)J_{z}^{2}+X^{2}+10X+102)+\hc\\
\mathcal{O}_{6,-1} & =\frac{1}{4i}(J_{+}-J_{-})(33J_{z}^{5}-(30X-15)J_{z}^{3}+(5X^{2}-10X+12)J_{z})+\hc\\
\mathcal{O}_{6,0} & =231J_{z}^{6}-(315X-735)J_{z}^{4}+(105X^{2}-525X+294)J_{z}^{2}-5X^{3}+40X^{2}-60X\\
\mathcal{O}_{6,1} & =\frac{1}{4}(J_{+}+J_{-})(33J_{z}^{5}-(30X-15)J_{z}^{3}+(5X^{2}-10X+12)J_{z})+\hc\\
\mathcal{O}_{6,2} & =\frac{1}{4}(J_{+}^{2}+J_{-}^{2})(33J_{z}^{4}-(18X+123)J_{z}^{2}+X^{2}+10X+102)+\hc\\
\mathcal{O}_{6,3} & =\frac{1}{4}(J_{+}^{3}+J_{-}^{3})(11J_{z}^{3}-(3X+59)J_{z})+\hc\\
\mathcal{O}_{6,4} & =\frac{1}{4}(J_{+}^{4}+J_{-}^{4})(11J_{z}^{2}-X-38)+\hc\\
\mathcal{O}_{6,5} & =\frac{1}{4}(J_{+}^{5}+J_{-}^{5})J_{z}+\hc\\
\mathcal{O}_{6,6} & =\frac{1}{4}(J_{+}^{6}+J_{-}^{6})+\hc
\end{align*}

